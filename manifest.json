{
  "name": "Expanded Tables",
  "description": "Adds padding and borders to table elements on the page for easier structural assessment.",
  "icons": { "128": "etact128.png" },
  "version": "1.0",
  "background": { 
    "scripts": ["et.js"]
  },
  "browser_action": {
    "name": "Expanded Tables",
    "default_icon": "et.png"
  },
  "permissions": [
    "activeTab"
  ],
  "commands": {
    "expand-tables": {
      "suggested_key": {
        "default": "Alt+Shift+6",
        "mac": "Alt+Shift+6"
      },
      "description": "Expand Tables"
    }
  },
  "manifest_version": 2
}
